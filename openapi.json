{
  "openapi": "3.1.0",
  "info": { "title": "ScottOS Calendar API", "version": "1.0.2" },
  "servers": [
    { "url": "https://scottos-mcp-calendar.onrender.com" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer" }
    },
    "schemas": {
      "EventCreate": {
        "type": "object",
        "required": ["summary", "start", "end"],
        "properties": {
          "calendarId": { "type": "string", "default": "primary" },
          "summary": { "type": "string" },
          "description": { "type": "string" },
          "start": { "type": "string", "description": "ISO datetime, e.g. 2025-08-14T10:00:00-04:00" },
          "end": { "type": "string", "description": "ISO datetime, e.g. 2025-08-14T10:45:00-04:00" },
          "recurrence": {
            "type": "array",
            "items": { "type": "string" },
            "description": "RRULE strings, e.g. ['RRULE:FREQ=WEEKLY;BYDAY=MO,TU,WE,TH,FR']"
          }
        },
        "additionalProperties": false
      },
      "EventUpdate": {
        "type": "object",
        "description": "Any subset of fields to update on an event",
        "properties": {
          "summary": { "type": "string" },
          "description": { "type": "string" },
          "start": { "type": "string", "description": "ISO datetime" },
          "end": { "type": "string", "description": "ISO datetime" },
          "recurrence": {
            "type": "array",
            "items": { "type": "string" },
            "description": "RRULE strings"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/api/calendar/events": {
      "get": {
        "operationId": "listEvents",
        "parameters": [
          { "name": "calendarId", "in": "query", "schema": { "type": "string", "default": "primary" } },
          { "name": "timeMin", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "timeMax", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "maxResults", "in": "query", "schema": { "type": "integer", "default": 25 } }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "createEvent",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/EventCreate" } } }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/calendar/events/{eventId}": {
      "patch": {
        "operationId": "updateEvent",
        "parameters": [
          { "name": "calendarId", "in": "query", "schema": { "type": "string", "default": "primary" } },
          { "name": "eventId", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/EventUpdate" } }
          }
        },
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "operationId": "deleteEvent",
        "parameters": [
          { "name": "calendarId", "in": "query", "schema": { "type": "string", "default": "primary" } },
          { "name": "eventId", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}
