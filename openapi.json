{
  "openapi": "3.0.0",
  "info": {
    "title": "ScottOS Calendar API",
    "version": "1.0.0"
  },
  "paths": {
    "/events": {
      "get": {
        "summary": "List upcoming events",
        "responses": {
          "200": {
            "description": "A list of events"
          }
        }
      },
      "post": {
        "summary": "Create an event",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "summary": { "type": "string" },
                  "start": { "type": "string" },
                  "end": { "type": "string" }
                },
                "required": ["summary", "start", "end"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event created"
          }
        }
      }
    }
  }
}
